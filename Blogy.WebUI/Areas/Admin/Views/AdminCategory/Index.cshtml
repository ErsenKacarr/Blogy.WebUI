@model List<Blogy.EntityLayer.Concreate.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Kategoriler</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th style="width: 50%">Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>
                <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryId">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
            <td>
                <a class="btn btn-success btn-sm" href="/AdminCategory/UpdateCategory/@item.CategoryId">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/AdminCategory/NewCategory/" class="btn btn-info">Yeni Kategori</a>

